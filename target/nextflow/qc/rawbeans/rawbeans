  echo ""


  echo "   --output"
  echo "        type: file, required parameter, output"
  echo "        example: output_qc_dir"
  echo "        An output directory to the QC results."
  echo ""


  echo "   --batch"
  echo "        type: boolean_true"
  echo "        When specified, will generate one report per sample instead of one report for all samples."
  echo ""


  echo "   --no_report"
  echo "        type: boolean_true"
  echo "        When specified, will only generate json and no report."
  echo ""


  echo "   --mass"
  echo "        type: double, multiple values allowed"
  echo "        List of masses to follow. Example: '--mass 371.10124 --mass 445.12003' or '--mass 371.10124:445.12003'."
  echo ""

}

