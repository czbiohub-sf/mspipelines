        "$ref": "#/definitions/peak detection arguments"
      },
      {
        "$ref": "#/definitions/deconvolution arguments"
      },
      {
        "$ref": "#/definitions/identification arguments"
      },
      {
        "$ref": "#/definitions/alignment arguments"
      },
      {
        "$ref": "#/definitions/nextflow input-output arguments"
      }
      
    ]
}
