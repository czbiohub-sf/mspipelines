{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "msdial_gcms",
    "description": "MS-DIAL GC/MS",
    "type": "object",
    "definitions": {
      "inputs" : {
        "title": "Inputs",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "input": {
            "type":"string",
            "description": "One or more input files.",
            
            
            "default": ""
          },
          "name": {
            "type":"string",
            "description": "Sample name, must be of same length as the input files.",
            
            
            "default": ""
          },
          "type": {
            "type":"string",
            "description": "Sample type, must be of same length as the input files.",
            
            "enum": ["Sample", "Standard", "QC", "Blank"],
            "default": ""
          },
          "class_id": {
            "type":"string",
            "description": "Sample class, must be of same length as the input files.",
            
            
            "default": ""
          },
          "batch": {
            "type":"integer",
            "description": "Sample batch, must be of same length as the input files.",
            
            
            "default": ""
          },
          "analytical_order": {
            "type":"integer",
            "description": "Sample analytical order, must be of same length as the input files.",
            
            
            "default": ""
          },
          "inject_volume": {
            "type":"number",
            "description": "Sample injection volume in \u00b5L, must be of same length as the input files.",
            
            
            "default": ""
          }
        }
      },
      "outputs" : {
        "title": "Outputs",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "output": {
            "type":"string",
            "description": "An output directory to store the \u0027*.msdial\u0027 outputs.",
            
            
            "default": "$id.$key.output.output"
          }
        }
      },
      "data type arguments" : {
        "title": "Data type arguments",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "data_type": {
            "type":"string",
            "description": "No description",
            
            "enum": ["Centroid", "Profile"],
            "default": "Centroid"
          },
          "ion_mode": {
            "type":"string",
            "description": "No description",
            
            "enum": ["Positive", "Negative"],
            "default": "Positive"
          },
          "accuracy_type": {
            "type":"string",
            "description": "No description",
            
            "enum": ["IsNominal", "IsAccurate"],
            "default": "IsNominal"
          }
        }
      },
      "data correction arguments" : {
        "title": "Data correction arguments",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "retention_time_begin": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0"
          },
          "retention_time_end": {
            "type":"number",
            "description": "No description",
            
            
            "default": "25"
          },
          "mass_range_begin": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0"
          },
          "mass_range_end": {
            "type":"number",
            "description": "No description",
            
            
            "default": "1000"
          }
        }
      },
      "peak detection arguments" : {
        "title": "Peak detection arguments",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "smoothing_method": {
            "type":"string",
            "description": "No description",
            
            "enum": ["SimpleMovingAverage", "LinearWeightedMovingAverage", "SavitzkyGolayFilter", "BinomialFilter"],
            "default": "LinearWeightedMovingAverage"
          },
          "smoothing_level": {
            "type":"integer",
            "description": "No description",
            
            
            "default": "3"
          },
          "average_peak_width": {
            "type":"integer",
            "description": "No description",
            
            
            "default": "20"
          },
          "minimum_peak_height": {
            "type":"integer",
            "description": "No description",
            
            
            "default": "1000"
          },
          "mass_slice_width": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0.1"
          },
          "mass_accuracy": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0.025"
          }
        }
      },
      "deconvolution arguments" : {
        "title": "Deconvolution arguments",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "sigma_window_value": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0.5"
          },
          "amplitude_cutoff": {
            "type":"number",
            "description": "No description",
            
            
            "default": "10"
          }
        }
      },
      "identification arguments" : {
        "title": "Identification arguments",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "msp_file": {
            "type":"string",
            "description": "No description",
            
            
            "default": ""
          },
          "ri_index_file": {
            "type":"string",
            "description": "No description",
            
            
            "default": ""
          },
          "retention_type": {
            "type":"string",
            "description": "No description",
            
            "enum": ["RI", "RT"],
            "default": "RI"
          },
          "ri_compound": {
            "type":"string",
            "description": "No description",
            
            "enum": ["Fames", "Alkanes"],
            "default": "Alkanes"
          },
          "retention_time_tolerance_for_identification": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0.5"
          },
          "retention_index_tolerance_for_identification": {
            "type":"number",
            "description": "No description",
            
            
            "default": "20"
          },
          "ei_similarity_tolerance_for_identification": {
            "type":"number",
            "description": "No description",
            
            
            "default": "70"
          },
          "identification_score_cutoff": {
            "type":"number",
            "description": "No description",
            
            
            "default": "70"
          },
          "use_retention_information_for_identification_scoring": {
            "type":"boolean",
            "description": "No description",
            
            
            "default": "False"
          },
          "use_retention_information_for_identification_filtering": {
            "type":"boolean",
            "description": "No description",
            
            
            "default": "False"
          },
          "only_report_top_hit": {
            "type":"boolean",
            "description": "No description",
            
            
            "default": "True"
          }
        }
      },
      "alignment arguments" : {
        "title": "Alignment arguments",
        "type": "object",
        "description": "No description",
        "default": "",
        "properties": {
          "alignment_index_type": {
            "type":"string",
            "description": "No description",
            
            "enum": ["RI", "RT"],
            "default": "RT"
          },
          "retention_time_tolerance_for_alignment": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0.075"
          },
          "retention_index_tolerance_for_alignment": {
            "type":"number",
            "description": "No description",
            
            
            "default": "20"
          },
          "ei_similarity_tolerance_for_alignment": {
            "type":"number",
            "description": "No description",
            
            
            "default": "70"
          },
          "retention_time_factor_for_alignment": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0.5"
          },
          "ei_similarity_factor_for_alignment": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0.5"
          },
          "peak_count_filter": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0"
          },
          "remove_feature_based_on_peak_height_fold_change": {
            "type":"boolean",
            "description": "No description",
            
            
            "default": "False"
          },
          "pct_detected_in_at_least_one_group": {
            "type":"number",
            "description": "No description",
            
            
            "default": "0"
          },
          "sample_max_over_blank_average": {
            "type":"number",
            "description": "No description",
            
            
            "default": "5"
          },
          "sample_average_over_blank_average": {
            "type":"number",
            "description": "No description",
            
            
            "default": "5"
          },
          "keep_identified_metabolites": {
            "type":"boolean",
            "description": "No description",
            
            
            "default": "True"
          },
          "keep_removable_features": {
            "type":"boolean",
            "description": "Keep removable features and assign the tag for checking.",
            
            
            "default": "True"
          },
          "replace_true_zero": {
            "type":"boolean",
            "description": "Replace true zero values with 1/10 of minimum peak height over all samples",
            
            
            "default": "False"
          }
        }
      },
      "nextflow input-output arguments" : {
        "title": "Nextflow input-output arguments",
        "type": "object",
        "description": "Input/output parameters for Nextflow itself. Please note that both publishDir and publish_dir are supported but at least one has to be configured.",
        "default": "",
        "properties": {
          "publish_dir": {
            "type":"string",
            "description": "Path to an output directory.",
            
            
            "default": ""
          },
          "param_list": {
            "type":"string",
            "description": "Allows inputting multiple parameter sets to initialise a Nextflow channel. Possible formats are csv, json, yaml, or simply a yaml_blob.\nA csv should have column names which correspond to the different arguments of this pipeline.\nA json or a yaml file should be a list of maps, each of which has keys corresponding to the arguments of the pipeline.\nA yaml blob can also be passed directly as a parameter.\nInside the Nextflow pipeline code, params.params_list can also be used to directly a list of parameter sets.\nWhen passing a csv, json or yaml, relative path names are relativized to the location of the parameter file.",
            "hidden": true,
            
            "default": ""
          },
          "param_list_format": {
            "type":"string",
            "description": "Manually specify the param_list_format. Must be one of \u0027csv\u0027, \u0027json\u0027, \u0027yaml\u0027, \u0027yaml_blob\u0027, \u0027asis\u0027 or \u0027none\u0027.",
            "hidden": true,
            "enum": ["csv", "json", "yaml", "yaml_blob", "asis", "none"],
            "default": ""
          }
        }
      }
    },
    "allOf": [
      {
        "$ref": "#/definitions/inputs"
      },
      {
        "$ref": "#/definitions/outputs"
      },
      {
        "$ref": "#/definitions/data type arguments"
      },
      {
        "$ref": "#/definitions/data correction arguments"
      },
      {
        "$ref": "#/definitions/peak detection arguments"
      },
      {
        "$ref": "#/definitions/deconvolution arguments"
      },
      {
        "$ref": "#/definitions/identification arguments"
      },
      {
        "$ref": "#/definitions/alignment arguments"
      },
      {
        "$ref": "#/definitions/nextflow input-output arguments"
      }
      
    ]
}
